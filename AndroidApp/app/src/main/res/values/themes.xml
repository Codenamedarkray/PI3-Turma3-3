<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SuperID" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.SuperID.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Remover ícone padrão da splash do Android 12+ -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
    </style>

</resources>